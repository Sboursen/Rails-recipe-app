<h2 class="text-center text-lg font-semibold my-6">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages" , resource: resource %>


    <div class="field flex flex-col w-fit text-left mx-auto h-fit my-4 gap-1 ">
      <%= f.label :name, class: "font-semibold" %>
      <%= f.text_field :name %>
    </div>

    <div class="field flex flex-col w-fit text-left mx-auto h-fit my-4 gap-1 ">
      <%= f.label :email, class: "font-semibold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field flex flex-col w-fit text-left mx-auto h-fit my-4 gap-1 ">
      <%= f.label :password, class: "font-semibold" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field flex flex-col w-fit text-left mx-auto h-fit my-4 gap-1">
      <%= f.label :password_confirmation, class: "font-semibold" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions flex flex-col w-fit text-center mx-auto h-fit my-4 gap-1 cursor-pointer">
      <%= f.submit "Sign up", class: 'bg-blue-200 border-2 border-sky-700 px-4 py-2 rounded-lg cursor-pointer' %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
