<h2 class="text-center text-lg font-semibold my-6">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field flex flex-col w-fit text-left mx-auto h-fit my-4 gap-1">
    <%= f.label :email, class: "font-semibold" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field flex flex-col w-fit text-left mx-auto h-fit my-4 gap-1">
    <%= f.label :password, class: "font-semibold" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field flex flex-col w-fit text-left mx-auto h-fit my-4 gap-1">
      <%= f.check_box :remember_me, class: "mx-auto" %>
      <%= f.label :remember_me, class: "font-semibold" %>
    </div>
  <% end %>

  <div class="actions flex flex-col w-fit text-center mx-auto h-fit my-4 gap-1 cursor-pointer">
    <%= f.submit "Log in", class: 'bg-blue-200 border-2 border-sky-700 px-4 py-2 rounded-lg cursor-pointer' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
