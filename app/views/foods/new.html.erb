<%= form_with model: @new_food, url: foods_path, method: :post do |form| %>
    <div class="flex flex-col w-48 mx-auto my-2 gap-y-2">
        <%= form.label :name %>
        <%= form.text_field :name %>
        <%= form.label :measurement_unit %>
        <%= form.text_field :measurement_unit %>
        <%= form.label :price %>
        <%= form.text_field :price %>
        <div class=" flex w-full bg-sky-800 cursor-pointer text-white font-medium justify-center py-2">
         <%= form.submit %>
        </div>
    </div>
<% end %>
