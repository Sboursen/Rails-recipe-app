<% if @recipe.errors.any? %>
        <ul>
            <% @recipe.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
<% end %>
<%= form_for @recipe do |f| %>
    <div class="flex flex-col w-[32rem] mx-auto my-2 gap-y-2">
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :description %>
        <%= f.text_area :description %>
        <div class="inline-block">
            <%= f.label :preparation_time %>
            <%= "(minutes)" %>
        </div>
        <%= f.text_field :preparation_time %>
        <div class="inline-block">
            <%= f.label :cooking_time %>
            <%= "(minutes)" %>
        </div>
        <%= f.text_field :cooking_time %>
        <div class=" flex w-full bg-sky-500 cursor-pointer text-white font-medium justify-center py-2">
         <%= f.submit %>
        </div>
    </div>
<% end %>

