<div class="flex flex-col mx-6 mt-6 gap-12">
  <div class="w-full text-right pr-6">
    <%=form_with model: Recipe.new, url: new_recipe_path, method: :get do %>
      <button class="px-4 py-2 shadow-md shadow-black">Add recipe</button>
    <% end %>
  </div>

<% @recipes.each do |recipe| %>
     <p><%= recipe.name %></p>
     <p><%= recipe.description %></p>
     <%= button_to "Delete", recipe_path(recipe), method: :delete, data:{controller:  "confirmation", "message-value": "Are you sure?", action: "submit->confirmation#confirm"}%>
<% end %>
</div>


