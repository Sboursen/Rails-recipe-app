<div class="flex flex-col mx-6 mt-6 gap-12">
  <table class="table-auto">
    <thead>
      <tr class="bg-gray-500 text-white">
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Unit price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% 6.times do |food| %>
        <tr class="odd:bg-gray-200">
          <td>Rice</td>
          <td>500 grams</td>
          <td>$750</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
